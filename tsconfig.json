{
  "compileOnSave": false,
  "exclude": ["**/node_modules", "**/tmp", "**/dist", "**/build", "**/coverage", "**/.cache", "**/.solid", ".yarn"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "moduleResolution": "Bundler",
    "module": "Preserve",

    // this triggers the type error, remove and error goes away
    "declaration": true
  }
}
